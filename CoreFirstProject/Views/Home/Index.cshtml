@model List<CoreFirstProject.Models.EmployeeModel>
@{
    ViewBag.Title = "Home Page";
}

<h2><a asp-action="AddDetails" asp-controller="Home">Blue</a></h2>

<div>
    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Dob</th>
                <th>Amount</th>
                <th>Address</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.DOB</td>
                <td>@item.Amount</td>
                <td>@item.Address</td>
                <td><a class="btn btn-warning" asp-action="Edit" asp-controller="Home" asp-route-Id="@item.Id">Edit</a></td>
               
                <td><a class ="btn btn-warning" asp-action="Delete" asp-controller="Home" asp-route-Id="@item.Id">Delete</a></td>
            </tr>
        }
    </table>
</div>